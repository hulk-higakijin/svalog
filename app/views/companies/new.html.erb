<section class="container mx-auto prose">
  <h2>会社を登録</h2>
  <%= form_with(model: @company) do |f| %>
    <div class="flex flex-col gap-4">
      <%= f.label :name %>
      <%= f.text_field :name, class: "input input-bordered w-full", placeholder: "株式会社〇〇", required: true %>

      <%= f.submit "submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>
