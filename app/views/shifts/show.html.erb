<div class="md:w-1/3 mx-auto">
  <div class="flex text-primary text-2xl font-bold">
    <%= link_to '←', shifts_path(year: @date.last_month.year, month: @date.last_month.month) %>
    <h2 class="mb-4 mx-auto"><%= @date.year %>/<%= @date.month %> のシフト</h2>
    <%= link_to '→', shifts_path(year: @date.next_month.year, month: @date.next_month.month) %>
  </div>

  <table class="table table-compact w-full text-center">
    <thead>
      <tr>
        <th>Date</th>
        <th>Start</th>
        <th>Finish</th>
        <th>Rest(min)</th>
      </tr>
    </thead>

    <% (@date.beginning_of_month..@date.end_of_month).each_with_index do |date, i|  %>
    <tbody>
      <tr class="<%= 'active' if i % 2 == 0 %>">
        <th><%= l date, format: :short_with_day %></th>
        <th>10:00</th>
        <th>19:00</th>
        <th>60</th>
      </tr>
    </tbody>
    <% end %>
  </table>

  <div class="flex py-4">
    <%= link_to "Edit", "#", class: "btn btn-sm px-8 btn-primary ml-auto" %>
  </div>
</div>
