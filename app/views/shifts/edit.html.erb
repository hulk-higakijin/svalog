<div class="md:w-1/3 mx-auto">
  <div class="flex text-primary text-2xl font-bold">
    <h2 class="mb-4 mx-auto"><%= @date.year %>/<%= @date.month %> のシフト申請</h2>
  </div>

  <%= form_with(url: shifts_path(year: @year, month: @month), method: :put) do |f| %>
    <table class="table table-compact w-full text-center">
      <thead>
        <tr>
          <th>Date</th>
          <th>Start</th>
          <th>Finish</th>
          <th>Rest(min)</th>
        </tr>
      </thead>

        <% @shifts_with_dates.each_with_index do |(date, shift), i|  %>
        <tbody>
          <tr class="<%= 'active' if i % 2 == 0 %>">
            <td><%= l(date, format: :short_with_day) %></td>
            <td>
              <%= f.time_select "shifts[#{i + 1}][start_at]", { default: shift&.start_at, minute_step: 30 }, { class: "border" }  %>
            </td>
            <td>
              <%= f.time_select "shifts[#{i + 1}][finish_at]", { default: shift&.finish_at, minute_step: 30 }, { class: "border" } %>
            </td>
            <td>
              <%= f.select "shifts[#{i + 1}][break_time]", (0..90).step(10), { selected: shift&.break_time }, { class: "input input-xs input-bordered w-20" } %>
            </td>
          </tr>
        </tbody>
        <% end %>
    </table>

    <div class="flex py-4">
      <%= link_to "← back", :back, class: "btn btn-sm px-8" %>
      <%= f.submit "Submit", class: "btn btn-sm px-8 btn-primary ml-auto" %>
    </div>
  <% end %>

</div>
